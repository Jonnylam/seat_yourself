<h1> Search for a restaurant to make a reservation </h1>
<%= form_tag restaurants_search_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search for a Restaurant", :name => nil %>
  </p>
<% end %>

<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>

	<p><strong>Picture:</strong><%= restaurant.picture_url %></p>
	<h2><%= restaurant.name %></h2>
	<p><strong>Capacity:</strong><%= restaurant.capacity %></p>
	<p><strong>Hours:</strong><%= restaurant.opens_at%> - <%= restaurant.closes_at %></p>
	
	<p><strong>Description</strong><%= restaurant.description %></p>
	<p><strong>Address</strong><%= restaurant.address %></p>
	<p><strong>Phone</strong><%= restaurant.phone %></p>

<% end %>